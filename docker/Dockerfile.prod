# Build stage
FROM node:20-alpine AS builder

# Set working directory
WORKDIR /app

# Install jq for JSON validation
RUN apk add --no-cache jq

# Copy package files first
COPY package*.json ./
COPY .npmrc ./

# Copy prisma schema
COPY prisma ./prisma/

# Install dependencies in stages
RUN npm install --no-cache

# Remove problematic packages
RUN rm -rf node_modules/reusify

# Install specific versions of problematic dependencies
RUN npm install --no-cache \
    postcss@8.4.35 \
    autoprefixer@10.4.17 \
    tailwindcss@3.3.0 \
    tr46@4.1.1 \
    whatwg-url@14.0.0 \
    reusify@1.0.4 \
    node-fetch@2.7.0

# Install development dependencies
RUN npm install --no-cache \
    rimraf@latest \
    glob@latest \
    eslint@latest \
    @typescript-eslint/parser@latest \
    @typescript-eslint/eslint-plugin@latest \
    lru-cache@latest

# Install OpenAI with specific version
RUN npm install --no-cache openai@4.28.0

# Copy the rest of the application
COPY . .

# Verify critical files are present
RUN echo "Verifying critical files..." && \
    ls -la && \
    echo "\nChecking app directory:" && \
    ls -la app && \
    echo "\nChecking node_modules:" && \
    ls -la node_modules && \
    echo "\nChecking package.json:" && \
    cat package.json

# Create public directory if it doesn't exist
RUN mkdir -p public

# Generate Prisma client
RUN npx prisma generate

# Make init-db.sh executable
RUN chmod +x scripts/init-db.sh

# Clean up
RUN rm -rf .next
RUN rm -rf node_modules/.cache

# Debug reusify package
RUN echo "Checking reusify package..." && \
    ls -la node_modules/reusify && \
    cat node_modules/reusify/package.json || echo "reusify package.json not found"

# Verify package.json files
RUN find node_modules -name "package.json" -type f -exec sh -c 'cat {} | jq . > /dev/null 2>&1 || echo "Invalid JSON in {}"' \;

# Build the application
RUN npm run build

# Runner stage
FROM node:20-alpine AS runner

# Set working directory
WORKDIR /app

# Copy everything from builder
COPY --from=builder /app .

# Verify files in runner stage
RUN echo "Verifying files in runner stage..." && \
    ls -la && \
    echo "\nChecking app directory:" && \
    ls -la app && \
    echo "\nChecking node_modules:" && \
    ls -la node_modules && \
    echo "\nChecking package.json:" && \
    cat package.json

# Make init-db.sh executable
RUN chmod +x scripts/init-db.sh

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]